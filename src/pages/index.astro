---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import Hero from '../components/Hero.astro';
import Skills from '../components/Skills.astro';
---

<BaseLayout>
	<main class="h-full mb-20 relative max-w-[52rem] mx-auto px-4 sm:px-6 md:px-8 xl:px-12 lg:max-w-7xl md:w-auto">
		<div class="mb-16 md:mb-36 flex">
			<Hero
				title="Hello, my name is Jyrki De Neve"
				tagline="I am a Laravel Developer who is currently based in Suntaži Parish, Latvia."
			/>
		</div>
	</main>
</BaseLayout>
