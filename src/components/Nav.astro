---
const textLinks: { label: string; href: string }[] = [
	{ label: 'Home', href: '/' },
	{ label: 'Blog', href: '/blog' },
	{ label: 'Skills', href: '/skills' },
	{ label: 'Open Source', href: '/open-source' },
	{ label: 'Uses', href: '/uses' },
];
---

<nav>
	<header class="relative px-4 sm:px-6 md:px-8 xl:px-12 pt-6">
		<div class="flex items-center text-center flex-col sm:flex-row gap-4 md:gap-0">
			<a href="/" class="border-none text-2xl font-extrabold text-transparent bg-clip-text bg-gradient-to-tl from-indigo-400 to-indigo-600" transition:persist>
				Jyrki De Neve
			</a>
			<div class="relative flex items-center space-x-2 md:space-x-8 sm:ml-auto">
				<nav>
					<ul class="text-sm flex items-center space-x-2 md:space-x-8 font-medium leading-none">
						{
							textLinks.map(({ label, href }) => (
								<li>
									<a
										aria-current={Astro.url.pathname === href}
										class:list={[
											'uppercase',
											'text-gray-800',
											{
												'text-indigo-600':
													Astro.url.pathname === href ||
													(href !== '/' && Astro.url.pathname.startsWith(href)),
											},
										]}
										href={href}
									>
										{label}
									</a>
								</li>
							))
						}
					</ul>
				</nav>
			</div>
		</div>
	</header>
</nav>
