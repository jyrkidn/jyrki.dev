---
const categories = [
    {
        name: 'Backend',
        skills: ['PHP', 'Laravel', 'REST APIs', 'MySQL'],
    },
    {
        name: 'Testing',
        skills: ['PestPHP', 'PHPUnit'],
    },
    {
        name: 'Frontend',
        skills: ['JavaScript', 'Vue.js', 'CSS', 'Tailwind'],
    },
    {
        name: 'Infrastructure & DevOps',
        skills: ['Docker', 'Git', 'Linux', 'CI/CD'],
    },
    {
        name: 'Search & Integrations',
        skills: ['MeiliSearch', 'Algolia', 'Third-party APIs'],
    },
    {
        name: 'AI Tooling',
        skills: ['Claude Code', 'ChatGPT'],
    },
]
---

<div class="mx-auto md:max-w-2xl grid grid-cols-1 sm:grid-cols-2 gap-8">
    {categories.map((category) => (
        <div>
            <h3 class="text-lg font-bold text-indigo-600">{category.name}</h3>
            <ul class="mt-3 flex flex-wrap gap-2">
                {category.skills.map((skill) => (
                    <li class="px-3 py-1 text-sm text-zinc-700 bg-zinc-100 rounded-full">{skill}</li>
                ))}
            </ul>
        </div>
    ))}
</div>
