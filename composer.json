{
    "name": "jyrkidn/jyrki.dev",
    "type": "project",
    "description": "Personal website of jyrki.dev",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "blade-ui-kit/blade-heroicons": "^1.2",
        "codeat3/blade-line-awesome-icons": "^1.1",
        "fideloper/proxy": "^4.4",
        "filament/filament": "^2.0",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "innocenzi/laravel-vite": "^0.1",
        "laravel/framework": "^8.12",
        "laravel/tinker": "^2.5",
        "mtownsend/read-time": "^2.0",
        "spatie/laravel-sluggable": "^3.2",
        "spatie/shiki-php": "^1.1",
        "wire-elements/spotlight": "^1.0"
    },
    "require-dev": {
        "deployer/deployer": "^7.0.0-rc.3",
        "facade/ignition": "^2.17",
        "fakerphp/faker": "^1.17",
        "laravel-shift/blueprint": "^2.0",
        "laravel/sail": "^1.12",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
